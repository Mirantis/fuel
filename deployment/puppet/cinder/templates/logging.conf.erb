[loggers]
keys = root

[handlers]
keys = rotated_file,syslog

[formatters]
keys = default

[logger_root]
level = ERROR
handlers = syslog
qualname = cinder

[handler_syslog]
class = handlers.SysLogHandler
args = ('/dev/log', handlers.SysLogHandler.LOG_LOCAL3)
formatter = default

[handler_rotated_file]
class = handlers.TimedRotatingFileHandler
level = DEBUG
formatter = default
# rotate at midnight, each day and keep 7 days
args = ('/var/log/cinder-all.log', 'midnight', 1, 7)

[formatter_default]
format = cinder %(name)s %(levelname)s %(message)s
