[loggers]
keys = root

[handlers]
keys = rotated_file,syslog

[formatters]
keys = default

[logger_root]
level = ERROR
handlers = syslog
qualname = nova

[handler_syslog]
class = handlers.SysLogHandler
args = ('/dev/log', handlers.SysLogHandler.LOG_<%= @syslog_log_facility %>)
formatter = default

[handler_rotated_file]
class = handlers.TimedRotatingFileHandler
level = DEBUG
formatter = default
# rotate at midnight, each day and keep 7 days
args = ('/var/log/nova-all.log', 'midnight', 1, 7)

[formatter_default]
format = nova %(name)s %(levelname)s %(message)s
