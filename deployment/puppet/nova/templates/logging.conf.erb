[loggers]
keys = root

[handlers]
keys = syslog

[formatters]
keys = default

[logger_root]
level = DEBUG
handlers = syslog
qualname = nova

[handler_syslog]
class = handlers.SysLogHandler
args = ('/dev/log', handlers.SysLogHandler.LOG_LOCAL0)
formatter = default

[formatter_default]
format = nova %(name)s %(levelname)s %(message)s
